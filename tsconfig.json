{
	"compilerOptions": {
		"target": "es2016",
		"module": "esnext",
		"strict": true,
		"noEmit": false,
		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
		  "~/*": ["./*"]
		},
        "outDir": "./dist",
		"typeRoots": [
			"node_modules/@types",
			"node_module/phaser/types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"types": [
			"phaser"
		]
	},
	"include": [
		"src/**/*",
		"types/**/*"
	]
}
